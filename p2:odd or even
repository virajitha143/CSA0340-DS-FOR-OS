#include<stdio.h>
int main()
{
	int n;
	printf("enter the number of element in the array: ");
	scanf("%d",&n);
	int arr[n];
	printf("enter %d element in the array :",n);
	for (int i=0;i<n;i++)
	{
		scanf("%d",&arr[i]);
	}
	printf("even number in the array are: ");
	for(int i=0;i<n;i++)
	{
		if(arr[i]%2==0)
		printf("%d",arr[i]);
	}
	printf("\nodd numkber in the array are: ");
	for(int i=0;i<n;i++)
	{
		if(arr[i]%2==1)
		printf("%d",arr[i]);
		
	}
	
}
